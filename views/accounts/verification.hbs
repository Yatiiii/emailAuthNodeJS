<div class="accounts_bg">
  <div class="container">
    <div class="error">
      {{error}}
    </div>
    <form action="/accounts/verification" method="post">
      <div class="title">Email Verification</div>
      <div class="input-box">
        <input
          type="text"
          required="true"
          name="email"
          placeholder="Enter Your Email"
          {{!-- value = {{email}} --}}
        />
        <div class="underline"></div>
      </div>

      <div class="input-box">
        <input type="text" name="code" placeholder="Enter Code" required />
        <div class="underline"></div>
      </div>
      <div style="left:0; margin-top:2rem;"><span>Did not receive code?
        </span><a
          href="/accounts/sendVerification"
          style="text-decoration:none;"
        >Resend Code</a></div>
      <button>Verify</button>
    </form>
  </div>
</div>